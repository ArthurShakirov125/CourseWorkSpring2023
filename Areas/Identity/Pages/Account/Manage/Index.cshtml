@page
@model IndexModel
@{
    ViewData["Title"] = "Профиль";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage" model="Model.StatusMessage" />
    <div class="custom-form_container">
        <form class="custom-form" id="profile-form" method="post" enctype="multipart/form-data">
            <div class="custom-preview">
                <img id="preview" src="~/icons/Avatar.png"/>
            </div>
            <div class="c_input">
                <label for="avatar">Загрузите картинку для профиля</label>
                <input id="avatar" name="avatar" class="form-control" type="file" />
                <span id="Input_avatar-error" class="text-danger"></span>
            </div>
            <div class="c_input">
                <label asp-for="Username">Логин пользователя</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="c_input">
                <label asp-for="Input.RegistrationDay"></label>
                <input asp-for="Input.RegistrationDay" class="form-control" disabled />
            </div>
            <div class="c_input">
                <label asp-for="Input.Nickname"></label>
                <input asp-for="Input.Nickname" class="form-control" />
                <span asp-validation-for="Input.Nickname" class="text-danger"></span>
            </div>
            <button class="custom-red_btn" id="update-profile-button" type="submit">Обновить</button>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}