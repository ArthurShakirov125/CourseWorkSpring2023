@page
@model IndexModel
@{
    ViewData["Title"] = "Профиль";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <img id="preview" width="150" height="150"/>
            </div>
            <div class="form-group">
                <label for="avatar">Загрузите картинку для профиля</label>
                <input id="avatar" name="avatar" class="form-control" type="file" />
                <span id="Input_avatar-error" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username">Логин пользователя</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.RegistrationDay"></label>
                <input asp-for="Input.RegistrationDay" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Nickname"></label>
                <input asp-for="Input.Nickname" class="form-control" />
                <span asp-validation-for="Input.Nickname" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Обновить</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}