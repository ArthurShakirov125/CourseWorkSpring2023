<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CourseWorkSpring2023</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/custom.css"/>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @if (User.IsInRole("Moderator"))
    {
        <script src="~/js/Moderator/Moderator.js" defer></script>
    }
</head>
<body>
    <header>
        <div class="custom-navbar">
            <div class="custom-nav-links">
                <a asp-controller="Posts" asp-action="Index">CourseWorkSpring2023</a>
                <ul>
                        <li>
                            <a asp-controller="Posts" asp-action="Index">Home</a>
                        </li>
                </ul>
            </div>
            <div class="custom-login">
                    <partial name="_LoginPartial" />
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CourseWorkSpring2023 - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
