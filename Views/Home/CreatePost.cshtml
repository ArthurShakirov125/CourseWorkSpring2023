@model CourseWorkSpring2023.Models.HomeViewModels.PostViewModel

@{
    ViewData["Title"] = "CreatePost";
}
<link rel="stylesheet" href="~/lib/Trumbowyg/dist/ui/trumbowyg.min.css">
<h1>CreatePost</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePost" method="post">
            <div class="form-group">
                <label asp-for="Header" class="control-label"></label>
                <input asp-for="Header" class="form-control" />
                <span asp-validation-for="Header" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="Text" class="form-control" maxlength="5000"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


<div class="test"></div>
@section scripts{
    <script src="~/lib/Trumbowyg/dist/trumbowyg.min.js"></script>
    <script>
        $('.test').trumbowyg();
    </script>
}
