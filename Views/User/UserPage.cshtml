@using CourseWorkSpring2023.BlazorComponents;
@using Microsoft.AspNetCore.Identity;
@model UserViewModel
@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager

<h1>@Model.NickName</h1>

<img src="@Model.AvatarImagePath" width="100" height="100"/>

    <div >
        @(await Html.RenderComponentAsync<FollowBtn>(RenderMode.ServerPrerendered,new {  ActiveUserId = (await UserManager.FindByNameAsync(User.Identity.Name)).Id, FollowedUserId = Model.Id }))
    </div> 

