@using CourseWorkSpring2023.Models.IndexViewModel;
@model UserViewModel

<h1>Привет @Model.NickName!</h1>
<hr>

<div class="custom-userpage_container">
    <div class="custom-user_posts">
        <div>
            <h3>
                Посты
            </h3>
            <div>
                <a class="custom-red_btn">Новые</a>
                <a class="custom-red_btn">Лучшие</a>
            </div>
        </div>
        <div class="custom-posts_container">
            @foreach(var post in Model.Posts)
            {
                @await Html.PartialAsync("Partial/PostInfo.cshtml", new PostInfoViewModel(){Post = post, IsModer = true})
            }
        </div>
    </div>
    <div class="custom-userpage_info">
        <img src="@Model.AvatarImagePath" width="100" height="100"/>

        <div class="custom-usermainpage-btns">
            <a class="custom-red_btn" asp-area="Identity" asp-page="/Account/Manage/Index">Управление акккаунтом</a>
            <a class="custom-red_btn" asp-controller="Posts" asp-action="CreatePost">Сделать пост</a>
            <a class="custom-red_btn" asp-action="Index" asp-controller="Posts">На главную</a>
        </div>

    </div>
</div>

@section scripts{
    <script src="~/js/Moderator/Moderator.js" defer></script>
    <script src="~/js/Blazor/Moderator.js"></script>
}

@section AddToHead{
    <link rel="stylesheet" href="~/css/user_page.css"/>
}